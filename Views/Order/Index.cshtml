@model Tuple<List<Product>,List<int>> 

@{
    ViewBag.Title = "Checkout - The Look Lab";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

<!-- checkout content -->
<form class="container" id="checkout" data-aos="fade-up" style="padding-bottom: 50px;"
     data-aos-duration="1500" method="post" action="@Url.Action("AddOrder","Order")">
    <h1 class="text-center" style="margin-top:20px; border-bottom: 2px solid #f693ad;">
        CHECKOUT
    </h1>
    <div class="row ">
        <div class="col-md-7">
            <div class="row">
                <div class="col-md-6 py-3 py-md-0">
                    <input type="text" class="form-control form-control" placeholder="Name" name="name" required>
                </div>
                <div class="col-md-6 py-3 py-md-0">
                    <input type="email" class="form-control form-control" placeholder="Email" name="email">
                </div>
            </div>
            <div class="row" style="margin-top: 30px;">
                <div class="col-md-6 py-3 py-md-0">
                    <input type="text" class="form-control form-control" placeholder="Phone" name="phoneNumber" minlength="11" maxlength="11" required>
                </div>
                <div class="col-md-6 py-3 py-md-0">
                    <input type="text" class="form-control form-control" placeholder="Postal Code" name="postalCode" required>
                </div>
            </div>
            <div class="form-group" style="margin-top: 30px;">
                <input type="text" class="form-control form-control" placeholder="Address" name="address" required>
            </div>
            <div class="row" style="margin-top: 30px;">
                <div class="col-md-6 py-3 py-md-0">
                        <input type="text" class="form-control form-control" placeholder="State/Province" name="state" id="state" required>
                </div>
                <div class="col-md-6 py-3 py-md-0">
                    <select name="city" class="form-control form-control">
                        <option value="" disabled selected hidden>City</option>
                        <option value="Abbottabad">Abbottabad</option>
                        <option value="Bahawalpur">Bahawalpur</option>
                        <option value="Dera Ghazi Khan">Dera Ghazi Khan</option>
                        <option value="Faisalabad">Faisalabad</option>
                        <option value="Gujranwala">Gujranwala</option>
                        <option value="Hyderabad">Hyderabad</option>
                        <option value="Islamabad">Islamabad</option>
                        <option value="Karachi">Karachi</option>
                        <option value="Lahore">Lahore</option>
                        <option value="Multan">Multan</option>
                        <option value="Peshawar">Peshawar</option>
                        <option value="Quetta">Quetta</option>
                        <option value="Rawalpindi">Rawalpindi</option>
                        <option value="Sialkot">Sialkot</option>
                        <option value="Sukkur">Sukkur</option>
                        <option value="Larkana">Larkana</option>
                        <option value="Jhang">Jhang</option>
                        <option value="Sheikhupura">Sheikhupura</option>
                        <option value="Mardan">Mardan</option>
                        <option value="Muzaffarabad">Muzaffarabad</option>
                        <option value="Gujrat">Gujrat</option>
                        <option value="Kasur">Kasur</option>
                        <option value="Rahim Yar Khan">Rahim Yar Khan</option>
                        <option value="Sahiwal">Sahiwal</option>
                        <option value="Okara">Okara</option>
                        <option value="Wah Cantonment">Wah Cantonment</option>
                        <option value="Charsadda">Charsadda</option>
                    </select>
                </div>
            </div>
            <div class="form-group" style="margin-top: 30px;">
                <textarea class="form-control" rows="2" id="comment" placeholder="Delivery Instructions" name="deliveryInstructions"></textarea>
            </div>

        </div>
        <div class="col-md-5">
            <div class="checkout-summary" id="cart">
                <h4>Order Summary</h4>
                @{
                    int index = 0;
                }
                @foreach(var product in Model.Item1)
                {
                    <div class="row" style="margin-bottom:8px;">
                        <div class="col-md-3">
                            <img src="@product.Image" alt="" class="cart-img-responsive">
                        </div>
                        <div class="col-md-9">
                            <h4 style="display: inline;">@product.Name</h4>
                            @{
                                int quantity = @Model.Item2 != null ? Model.Item2[index] : 1;
                            }
                            <h4 style="display: inline; text-align: right;">&nbsp; &times; @quantity</h4>
                            <p class="detail">Rs. @product.Price<br></p>
                        </div>
                    </div>
                    index++;
                }
                <div class="form-group" style="margin-top: 30px; ">
                    <p class="detail">Sub Total : Rs. @ViewBag.TotalPrice</p>
                    <p class="detail">Delivery Fee : 200</p>
                    @{
                        int total = @ViewBag.TotalPrice + 200;
                    }
                    <h4>Total : @total</h4>
                    <input type="hidden" value="@total" name="totalPrice" />
                </div>
                <div id="btntable" class="text-center" style="margin-bottom: 50px;">
                    <button type="submit" class="btn btn-secondary">Place Order</button>
                </div>

            </div>
        </div>
    </div>
</form>
<!-- checkout content -->

