<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/adminstyle.css">
    <link rel="shortcut icon" type="image" href="/images/logo.png">
    <!-- bootstrap links -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anek+Malayalam:wght@500&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Almendra:ital,wght@0,400;0,700;1,400;1,700&family=Shalimar&display=swap" rel="stylesheet">
    <!-- icons -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <!-- animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <style>
    </style>
</head>
<body>

    <!-- header  -->
    <nav class="navbar navbar-expand-md" id="navbar-color"
         style="background-color: #fef4ec; z-index:1; position:fixed; top:0; width:100%;">
        <ul class="navbar-navb">
            <li class="nav-item">
                <a href="@Url.Action("Index","Admin")" style="color:black; text-decoration:none;">
                    <span class="logo-heading">
                        <img src="/images/logo.png" alt="" style="width:40px;">
                        <h3>Dashboard</h3>
                    </span>
                </a>
            </li>
            <li class="nav-item">
                <input type="search" placeholder="Search">
                <a href="#"><img src="/images/search-icon.png" alt="Search Icon"></a>
            </li>
            <li class="nav-item">
                <partial name="_LoginPartial" />
            </li>
        </ul>
    </nav>
    <!-- header end -->

    <!-- sidebar -->
    <nav class="sidebar" @* data-aos="fade-down"
         data-aos-easing="linear"
         data-aos-duration="1500" *@>
        <div class="sidebar-header">
            <p></p>
        </div>
        <ul class="list-unstyled components">
            <li>
                <a href="#productsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"
                   style="text-decoration:none;">Products</a>
                <ul class="collapse list-unstyled" id="productsSubmenu">
                    <li><a href="@Url.Action("AddProduct","Products")" style="text-decoration:none;"><p>Add Product</p></a></li>
                    <li><a href="@Url.Action("ManageProducts","Products")" style="text-decoration:none;"><p>Manage Products</p></a></li>
                </ul>
            </li>
@*             <li>
                <a href="#categoriesSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"
            style="text-decoration:none;">Categories</a>
                <ul class="collapse list-unstyled" id="categoriesSubmenu">
                    <li><a href="@Url.Action("AddCategory","Category")"><p>Add Category</p></a></li>
                    <li><a href="@Url.Action("ManageCategories","Category")"><p>Manage Categories</p></a></li>
                </ul>
            </li> *@
            <li>
                <a href="@Url.Action("OrdersTable","Admin")" style="text-decoration:none;">Orders</a>
            </li>
            <li>
                <a href="@Url.Action("UsersTable","Admin")" style="text-decoration:none;">Users</a>
            </li>
        </ul>
    </nav>
    <!-- sidebar end -->
    <div class="content" data-aos="fade-up" data-aos-duration="1500" style="margin-top:120px;">
        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
