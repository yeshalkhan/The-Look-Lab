@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
    </li>
}
else
{
        <li><a asp-area="Identity" asp-page="/Account/Login"><img src="/images/user-icon.png"></a></li>

}
    @* <a asp-area="Identity" asp-page="/Account/Login"><img src="/images/user-icon.png"></a> *@
</ul>
